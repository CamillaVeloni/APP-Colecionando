<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >

    </style>

    <style name="bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/bg</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="txtPerfil">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:shadowColor">#44000000</item>
    </style>

    <style name="txtFiltros_museu">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">14sp</item>
        <item name="android:shadowColor">#44000000</item>
    </style>

    <style name="txtNumeros">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/cinza_color</item>
        <item name="android:shadowColor">#44000000</item>
    </style>

    <style name="txtNomeTitulo">
        <item name="android:textColor">@color/hard_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:shadowColor">#44000000</item>
    </style>

    <style name="txtDescrição">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#888888</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="txtData">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">#FFCCCCCC</item>
    </style>

    <style name="txtTitulo_Detalhe">
        <item name="android:textColor">@color/hard_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">#44000000</item>
    </style>

    <style name="txtResto_Layout">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#888888</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="txtResto_Detalhe">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#888888</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>


</resources>
